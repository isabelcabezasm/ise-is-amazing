{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install UI Dependencies",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      }
    },
    {
      "label": "Start Next.js Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "next",
        "pattern": [
          {
            "regexp": ".*"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting the development server.*",
          "endsPattern": ".*Local:.*"
        }
      }
    },
    {
      "label": "Start Python FastAPI Server",
      "type": "shell",
      "command": "uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "pattern": [
          {
            "regexp": ".*"
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*INFO:.*Started server process.*",
          "endsPattern": ".*INFO:.*Application startup complete.*"
        }
      }
    },
    {
      "label": "Start Full Stack Development",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Next.js Dev Server",
        "Start Python FastAPI Server"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
